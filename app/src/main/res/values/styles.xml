<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/blue_300</item>
    </style>

    <style name="Theme.MaterialComponents.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="ToolbarTextAppearance">
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowColor">?colorAccent</item>
    </style>

    <style name="ToolbarTextAppearance.Title">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="ToolbarTextAppearance.Subtitle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MyToolbar">
        <item name="theme">@style/ThemeOverlay.MaterialComponents.Dark</item>
        <item name="android:elevation">15dp</item>
    </style>

    <style name="popupmenu" parent="Base.Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/blue_400</item>
        <item name="android:itemBackground">@color/white</item>
        <item name="android:popupElevation">50dp</item>

    </style>
    <!--fullscreen config-->
    <style name="Dialog.FullScreen" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:padding">0dp</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>
    <style name="menu_font_style">
        <item name="fontFamily">@font/google_sans</item>
    </style>
    <style name="ActionBarTheme" parent="AppTheme.AppBarOverlay">
        <item name="android:textColorPrimary">@color/blue_300</item>
    </style>
    <style name="AppTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!-- Set proper title size -->
        <item name="android:textSize">16dp</item>
        <!-- Set title color -->
        <item name="android:textColor">@color/blue_300</item>
        <item name="android:fontFamily">@font/google_sans</item>
    </style>
    <!--  Alert dialog style -->
    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="BodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>
    <style name="TitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/grey_600</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>
</resources>
